{
  "name": "[dev] Extensión para Eskup",
  "version": "1.0",
  "description": "Extensión de Chrome no oficial para utilizar Eskup, la red social de EL PAÍS. (http://www.eskup.es)",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
    },
  "permissions": [
	"tabs",
  "fileSystem",
	"http://*/*",
  "https://*/*"
  ],
  "options_page": "options.html",
  "background": {"scripts": ["js/eskupbckground.js"]},
  "icons": { "48": "img/eskupicon48.png",
          "128": "img/eskupicon128.png" },
  "content_security_policy": "script-src 'self' https://example.com; object-src 'self' https://vimeo.com",
  "manifest_version" : 2
}